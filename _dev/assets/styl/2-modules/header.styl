@require "../1-base/vars.styl"
header[role="banner"]
  margin-top: 0px
  font-weight: 700
  height: 125px
  padding-top: 20px
  position: relative
  +below($tablet-bp)
    height: 80px
    padding-right: 0px

.header
  &--wrap
    will-change: height, margin-top
    margin-top: 0px
    position: relative
    height: 145px
    width: 100%
    top 0px
    transition-duration: 0.3s
    transition-timing-function: ease-in-out;
    transition-property: margin-top, height
    +below($tablet-bp)
      height: 100px

  &--image

  &--logo-link

    column(1/4)
    display: inline-block;
    +below($tablet-bp)
      height: 60px
      width: 80px
  &--logo
    background-image: url("/assets/images/logo.svg")
    height: auto
    max-width: 150px
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center left
    // background-size: cover;
    height: 100px
    margin-left: 0.5em
    width: auto
    +below($tablet-bp)
      height: 60px
      width: 80px

.no-svg .header--logo-link
  background-image: url("/assets/images/logo.png")
  height: auto
  max-width: 150px
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center
  column(1/4)
  display: inline-block;
  +below($tablet-bp)
    height: 60px
    width: 80px
