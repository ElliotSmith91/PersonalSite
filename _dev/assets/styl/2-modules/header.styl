@require "../1-base/vars.styl"
header[role="banner"]
  margin-top: 0px
  font-weight: 700
  height: 125px
  padding-top: 20px
  position: relative
  +below($tablet-bp)
    height: 80px
    padding-right: 0px

.header
  &--wrap
    will-change: height, margin-top
    margin-top: 0px
    position: relative
    height: 145px
    width: 100%
    top 0px
    transition-duration: 0.3s
    transition-timing-function: ease-in-out;
    transition-property: margin-top, height
    +below($tablet-bp)
      height: 100px
  &--logo-link
    // height: 100px
    // max-width: 100px
    column(1/4)
    display: inline-block;
    +below($tablet-bp)
      height: 60px
      width: 80px
  &--logo
    height: 100px
    width: auto
    +below($tablet-bp)
      height: 60px
      width: 80px
