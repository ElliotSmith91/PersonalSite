@require "../1-base/vars.styl"
.shadow
  &--button
    border-radius: 3px
    box-shadow: 2px 1px 3px $es-grey
    color: $es-red
    cursor: pointer
    display: none
    float: right
    font-weight: 700
    height: 40px
    line-height: 40px
    margin-right: 3em
    margin-top: 38px
    position: relative
    text-align: center
    transition: box-shadow .2s ease-in-out, color .2s ease-in-out
    width: 75px
    &:hover
      color: $es-grey
    &:active
      box-shadow: 1px 1px 3px $es-red
      left: 2px
      top: 2px
    +below($tablet-bp)
      display: inline-block
      z-index: 1

.section
  &--cta-button
    border: 1px solid tint($es-grey, 50%)
    color: $es-grey
    display: inline-block
    padding: 1.75em 3.5em
    transition: all .3s ease-in-out
    &:hover
      background-color: $es-red
      color: white
