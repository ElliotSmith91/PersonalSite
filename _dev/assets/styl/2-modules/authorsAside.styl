.author
  &--wrap
    padding: 0 0
    margin: 0 0
    &-title
      margin: 0
  &--img-wrap
    span(1/4 3/8)
    border-radius: 75%
    background-size: cover
    background-position: center;
    margin: $default-margin 0
    vertical-align: middle;
    align-self: center;
    &:after
      content: ''
      padding-top: 100%
  &--info-wrap
    display: flex;
    justify-content: center
    vertical-align: middle;
    overflow: auto
    margin-top: 0
  &--text
    span(3/4 3/8)
    font-size: 0.8em
    padding-left: 1em
  &--text-full
    span(1/1 3/8)
    font-size: 0.8em
    margin: 0 0
  &--name
    margin-top: 0
    &-hr
      margin-top: 0
      text-align: left
      margin-left: 0
      margin-right: 0
      width: 12%
      background-color: $es-red
  &--hr
    margin-top: 0
