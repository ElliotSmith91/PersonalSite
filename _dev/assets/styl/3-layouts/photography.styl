@require "../1-base/vars.styl"
.photography
  &--gallery
    column-count: 4
    column-gap: 0
    +below($tablet-bp)
      column-count: 2
    +below($mobile-bp)
      column-count: 1
  &--thumb
    width: 100%
    height: auto
    max-height: 100%
    &-wrap
      // span(1/4 5/8, $cycle: 4)
      // display: grid
      margin: .5em .25em
      margin-top: 0
      line-height: 0
      // +below($tablet-bp)
      //   stack()
  &--right
    column(3/8)
    move(5/8)
    // padding-left: 0.5em
    padding-right: $default-margin
    position: relative;
    overflow: hidden;
    text-align: center
    +below($tablet-bp)
      stack()
      unmove()
      padding-left: $default-margin

  &--left
    column(5/8)
    move(-3/8)
    // padding-right: 0
    overflow: hidden;
    position: relative
    +below($tablet-bp)
      stack()
      unmove()

.blur-up
	-webkit-filter: blur(5px);
	filter: blur(5px);
	transition: filter 400ms, -webkit-filter 400ms;

.blur-up.lazyloaded
	-webkit-filter: blur(0);
	filter: blur(0);


.fade-box .lazyload, .fade-box .lazyloading
  opacity: 0;
  transition: opacity 400ms;


.fade-box img.lazyloaded
  opacity: 1;
