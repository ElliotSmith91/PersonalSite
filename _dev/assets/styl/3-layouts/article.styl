@require "../1-base/vars.styl"
.article
  &--info
    color: black
  &--header-hr
    width: 25%
    background-color: $es-red
    text-align: left
    margin-left: 0
    margin-right: 0
    margin-bottom: $default-margin
    margin-top: 5px

.pullquote
  &right
    width: 33%
    color: $es-grey;
    font-style: italic;
    padding: 1em 1em
    margin: 0 0
    border-left: 2px solid $es-red
    float: right;
    margin-left: 1em
    & p
      margin-bottom: 0
  &left
    width: 33%
    color: $es-grey;
    font-style: italic;
    padding: 1em 1em
    margin: 0 0
    border-left: 2px solid $es-red
    float: left;
    margin-right: 1em
    & p
      margin-bottom: 0
