@require "../1-base/vars.styl"
.intro
  height: 100vh
  background-image: url("/assets/images/MeLineOpt.svg")
  background-size: 100% 130%
  background-repeat: no-repeat
  background-position: -100px bottom
  +below($tablet-bp)
    background-size: 120% 60%
    background-repeat: no-repeat
    background-position: -100px top
  +below($mobile-bp)
    background-size: 100% 100%
    background-repeat: no-repeat
    background-position: -50px top
  &--img-padding
    column(3/8)
    height: 60%
  // &--img
  //   min-width: 100%
  //   min-height: 100%
  &--type-wrap
    column(5/8)
    margin-top: 30vh
    +below($tablet-bp)
      margin-top: 0px
  &--type
    font-weight: 300;
