@require "../1-base/vars.styl"
.blog
  &--post
    background-size: cover
    margin-top: 0
    span(1/2 5/8, cycle: 2)
    cursor: pointer;
    opacity: 0
    transform: translateX(-30px);
    transition: all 0.3s ease-in-out
    position: relative;
    display: block
    +below($tablet-bp)
      span(1/4 5/8, cycle: 4)
    &:after
      content: ''
      display: block
      padding-top: 100%
    &-date
      margin-top: 0
      font-size: (1/1.618)em
    &:hover
      color: $es-grey
      & .blog--data
        opacity: 1
        transform: translate(0%, 0%) scale(1);


  &--data
    opacity: 0
    color: white
    position: absolute;
    line-height: 1.2em
    padding: 0.6em
    background: rgba($es-red, 0.5)
    top: 0
    left: 0
    right: 0
    bottom: 0
    transform: translate(0%, 100%) scale(0.5);
    transition: all 0.3s ease-in-out
    & .no-rgba
      background-color: $es-red
.showing
  opacity: 1
  transform: translateX(0px);

.no-js
  & .blog--post
    transform: translateX(0px);
    opacity: 1
