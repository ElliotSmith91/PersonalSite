@require "vars"

html
  box-sizing: border-box;
  overflow-y: scroll
  +below($tablet-bp)
    overflow-x: hidden

*, *:before, *:after
  box-sizing: inherit;

body
  background-color: $bg-colour
  min-height: 100vh
  display: flex
  flex-direction: column

* + *
  margin-top: $default-margin

hr
  background-color: $es-grey
  // background-image: linear-gradient(to right, rgba($es-grey, 0.2), rgba($es-grey, 0.9), rgba($es-grey, 0.2));
  clear: both;
  width: (100vw / 1.618)%
  border: 0;
  height: 1px;
  display: block;

a
  color: $es-red
  text-decoration: none;
  font-weight: 700
  cursor: pointer
  &:focus
    outline: -webkit-focus-ring-color $es-grey 5px
  &:hover
    color: darken($es-red, 50%);

ul, li
  list-style: none;
  padding: 0
  margin: 0

i
  color: $es-red

article, section
  overflow: hidden;

.honey {
  position: absolute;
  left: -9999px;
}

blockquote {
  margin: 0
}

main {
  flex: 1 0 auto
  overflow-y: hidden
}

/* Let's get this party started */
::-webkit-scrollbar {
    width: 8px;
}

/* Track */
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 3px rgba(0,0,0,0.3);
  background: tint($es-grey, 75%)
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: $es-red
}
::-webkit-scrollbar-thumb:window-inactive {
	background: tint($es-red, 60%)
}

::-webkit-scrollbar-track:window-inactive
  background: white
