@require "vars"

html
  +below($tablet-bp)
    overflow-x: hidden

body
  background-color: white

* + *
  margin-top: 1.5em

hr
  clear: both;
  width: (100vw / 1.618)%
  // //hr style 1
  // border: 0;
  // height: 1px;
  // background-image: linear-gradient(to right, rgba(0, 0, 0, 0), $es-grey, rgba(0, 0, 0, 0));
  // hr style 2
  border: 0;
  height: 1px;
  background-image: linear-gradient(to right, rgba($es-grey, 0.2), rgba($es-grey, 0.9), rgba($es-grey, 0.2));

a
  color: $es-red
  text-decoration: none;
  font-weight: 700
  &:hover
    color: darken($es-red, 50%);

ul, li
  list-style: none;
  padding: 0
  margin: 0
h2
  margin-left: 1em
  margin-right: 1em
article
  overflow: hidden;
